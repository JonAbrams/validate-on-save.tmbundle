<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>beforeRunningCommand</key>
	<string>saveActiveFile</string>
	<key>command</key>
	<string>#!/usr/bin/env ruby

require ENV['TM_SUPPORT_PATH'] + "/lib/textmate"
require ENV['TM_BUNDLE_SUPPORT'] + "/lib/validate_on_save"

TM_ERLC = ENV['TM_ERLC'] ||= "erlc"

VOS.output({
  :info =&gt; "",
  :result =&gt; `"#{TM_ERLC}" "#{ENV['TM_FILEPATH']}"`,
  :match_ok =&gt; /^$/i,
  :match_line =&gt; /.*?#{Regexp.escape(ENV['TM_FILENAME'])}\:(\d+)\:.*/i,
  :lang =&gt; "Erlang"
})</string>
	<key>input</key>
	<string>document</string>
	<key>keyEquivalent</key>
	<string>@s</string>
	<key>name</key>
	<string>Validate Erlang</string>
	<key>output</key>
	<string>showAsTooltip</string>
	<key>scope</key>
	<string>source.erlang</string>
	<key>uuid</key>
	<string>33995B55-507A-4F3B-839E-70D0A298DC9E</string>
</dict>
</plist>
