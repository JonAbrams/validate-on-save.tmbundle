<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>beforeRunningCommand</key>
	<string>saveActiveFile</string>
	<key>command</key>
	<string>#!/usr/bin/env ruby
require ENV['TM_SUPPORT_PATH'] + '/lib/textmate'
require ENV['TM_BUNDLE_SUPPORT'] + "/conf/validate-on-save.config"
TM_PHP = ENV['TM_PHP'] ||= "php"

version = %x{'php' -v}.split[0..2].join(' ')
info =  "Running syntax check with " + version + "â€¦"
info = (VOS_VALIDATOR_INFO) ? "Running syntax check with " + version + "\n" : ""

result = `"#{TM_PHP}" -d display_errors=on -l`.gsub('in -', '')

if result =~ /^No syntax errors detected/i
  if !VOS_ONLY_ON_ERROR
    puts info + "Syntax OK" if VOS_TM_NOTIFY
    `#{VOS_GROWL_BIN} -p 'Low' -m 'Syntax OK' -n 'Textmate Syntax Check' -t "PHP Syntax Check" -a "Textmate"` if VOS_GROWL
  end
else
  puts info + result if VOS_TM_NOTIFY
  `#{VOS_GROWL_BIN} -p 'Emergency' -m "#{result}" -n 'Textmate Syntax Check' -t "PHP Syntax Check" -a "Textmate"` if VOS_GROWL
  TextMate.go_to :line =&gt; $1 if result =~ /line (\d+)/i
end</string>
	<key>input</key>
	<string>document</string>
	<key>keyEquivalent</key>
	<string>@s</string>
	<key>name</key>
	<string>Validate PHP</string>
	<key>output</key>
	<string>showAsTooltip</string>
	<key>scope</key>
	<string>source.php</string>
	<key>uuid</key>
	<string>5C4ABB28-6E89-43BF-8514-1E43CDBB2E22</string>
</dict>
</plist>
