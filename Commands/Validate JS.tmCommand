<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>beforeRunningCommand</key>
	<string>saveActiveFile</string>
	<key>command</key>
	<string>#!/usr/bin/env ruby
require ENV['TM_SUPPORT_PATH'] + '/lib/textmate'
require ENV['TM_BUNDLE_SUPPORT'] + "/conf/validate-on-save.config"
FILENAME = ENV['TM_FILENAME']
FILEPATH = ENV['TM_FILEPATH']
SUPPORT  = ENV['TM_BUNDLE_SUPPORT']
BINARY   = "#{SUPPORT}/bin/jsl"

info = (VOS_VALIDATOR_INFO) ? "Running syntax check with JavaScript Lint\n" : ""
result = `"#{BINARY}" -process "#{FILEPATH}" -nologo -conf "#{SUPPORT}/conf/jsl.textmate.conf"`.gsub!(FILENAME, '').strip()

if result =~ /0 error\(s\)\, 0 warning\(s\)/i
  if !VOS_ONLY_ON_ERROR
    puts info + "Syntax OK" if VOS_TM_NOTIFY
    `#{VOS_GROWL_BIN} -p 'Low' -m 'Syntax OK' -n 'Textmate Syntax Check' -t "Ruby Syntax Check" -a "Textmate"` if VOS_GROWL
  end
else
  puts info + result if VOS_TM_NOTIFY
  `#{VOS_GROWL_BIN} -p 'Emergency' -m "#{result}" -n 'Textmate Syntax Check' -t "Ruby Syntax Check" -a "Textmate"` if VOS_GROWL
  TextMate.go_to :line =&gt; $1 if result =~ /^(\d+):\s/i
end</string>
	<key>input</key>
	<string>document</string>
	<key>keyEquivalent</key>
	<string>@s</string>
	<key>name</key>
	<string>Validate JavaScript</string>
	<key>output</key>
	<string>showAsTooltip</string>
	<key>scope</key>
	<string>source.js, source.prototype.js</string>
	<key>uuid</key>
	<string>079F7B17-51B5-4C09-8577-77D6A0D827F2</string>
</dict>
</plist>
