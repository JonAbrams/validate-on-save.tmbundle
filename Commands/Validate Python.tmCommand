<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>beforeRunningCommand</key>
	<string>saveActiveFile</string>
	<key>command</key>
	<string>#!/usr/bin/env ruby
require ENV['TM_SUPPORT_PATH'] + "/lib/textmate"
require ENV['TM_BUNDLE_SUPPORT'] + "/lib/validate_on_save"

SUPPORT  = ENV['TM_BUNDLE_SUPPORT']
PYTHON_VALIDATOR = "#{SUPPORT}/bin/python_validator.rb"

VOS.output({
  :info =&gt; `echo "SPyFlakes - #{ENV['VOS_PYFLAKES']}"`,
  :result =&gt; `"#{PYTHON_VALIDATOR}"`,
  :match_ok =&gt; /^$/,
  :match_line =&gt; /line (\d+)/i,
  :lang =&gt; "Python"
}) if ENV['VOS_PYFLAKES']</string>
	<key>input</key>
	<string>document</string>
	<key>keyEquivalent</key>
	<string>@s</string>
	<key>name</key>
	<string>Validate Python</string>
	<key>output</key>
	<string>showAsTooltip</string>
	<key>scope</key>
	<string>source.python</string>
	<key>uuid</key>
	<string>E1B0ADB9-99C8-4086-8248-70D2495B940D</string>
</dict>
</plist>
