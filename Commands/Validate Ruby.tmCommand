<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>beforeRunningCommand</key>
	<string>saveActiveFile</string>
	<key>command</key>
	<string>#!/usr/bin/env ruby
require ENV['TM_SUPPORT_PATH'] + "/lib/textmate"
require ENV['TM_BUNDLE_SUPPORT'] + "/conf/validate-on-save.config"
TM_RUBY = ENV['TM_RUBY'] ||= "ruby"

info = (VOS_VALIDATOR_INFO) ? `"${TM_RUBY}" -e'puts "Running syntax check with ruby-" + RUBY_VERSION.to_s'` + "\n" : ""
result = `"${TM_RUBY}" -wc 2&gt;&amp;1`.gsub(/\-\:([0-9]+)\: /i, 'Line \1: ')

if result =~ /Syntax OK/i
  if !VOS_ONLY_ON_ERROR
    puts info + result if VOS_TM_NOTIFY
    `#{VOS_GROWL_BIN} -p 'Low' -m 'Syntax OK' -n 'Textmate Syntax Check' -t "Ruby Syntax Check" -a "Textmate"` if VOS_GROWL
  end
else
  result.gsub!("\`","\\\\`")
  puts info + result if VOS_TM_NOTIFY
  `#{VOS_GROWL_BIN} -p 'Emergency' -m "#{result}" -n 'Textmate Syntax Check' -t "Ruby Syntax Check" -a "Textmate"` if VOS_GROWL
  TextMate.go_to :line =&gt; $1 if result =~ /line (\d+)/i
end</string>
	<key>input</key>
	<string>document</string>
	<key>keyEquivalent</key>
	<string>@s</string>
	<key>name</key>
	<string>Validate Ruby</string>
	<key>output</key>
	<string>showAsTooltip</string>
	<key>scope</key>
	<string>source.ruby</string>
	<key>uuid</key>
	<string>83B5DB3E-BA86-41ED-9BDE-7E5B702E4123</string>
</dict>
</plist>
